<script type="text/javascript" src="http://code.jquery.com/jquery-3.6.1.min.js"></script>
<script>
$(function(){
	window.dispatchEvent(new Event('resize'));
})
$(window).resize(function(){
	if($(window).width()<=960){
		$(".content-header").hide();
		$(".content-header-phone-margin").show();
	} else {
		$(".content-header").show();
		$(".content-header-phone-margin").hide();
		
	}
});

let more_button_clicked = false;
$(document).click(function(e){
	if($(e.target).attr("class")==="content-more-button" && more_button_clicked !== true) {
		$(".content-more-button-menu").show();
		more_button_clicked = true;
	} else {
		$(".content-more-button-menu").hide();
		more_button_clicked = false;
	}
});
</script>
